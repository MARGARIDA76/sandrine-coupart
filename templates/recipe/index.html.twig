{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Mes Recettes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Preparation</th>
                <th>Repos</th>
                <th>Cuisson</th>
                <th>Ingredients</th>
                <th>Etapes</th>
                <th>Allergenes</th>
                <th>Regimes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.Titre }}</td>
                <td>{{ recipe.Description }}</td>
                <td>{{ recipe.Preparation }}</td>
                <td>{{ recipe.Repos }}</td>
                <td>{{ recipe.Cuisson }}</td>
                <td>{{ recipe.Ingredients }}</td>
                <td>{{ recipe.Etapes }}</td>
                <td>{{ recipe.Allergenes }}</td>
                <td>{{ recipe.Regimes }}</td>
                <td>
                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_ajouter') }}">Create new</a>
{% endblock %}
