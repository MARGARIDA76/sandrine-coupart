{% extends 'base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}

<div class="container mt-5">
    <h1>Mes Recettes</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col" >Titre</th>
                <th scope="col" >Description</th>
                <th scope="col" >Tempts_de_Preparation</th>
                <th scope="col" >Temps_de_Repos</th>
                <th scope="col" >Temps_de_Cuisson</th>
                <th scope="col" >Igredients</th>
                <th scope="col" >Etapes</th>
                <th scope="col" >Allergenes</th>
                <th scope="col" >Regime</th>
                <th scope="col" >Ajouter</th>
                <th scope="col" >Modifier</th>
                <th scope="col" >Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.Titre }}</td>
                <td>{{ recipe.Description }}</td>
                <td>{{ recipe.TemptsDePreparation }}</td>
                <td>{{ recipe.TempsDeRepos }}</td>
                <td>{{ recipe.TempsDeCuisson }}</td>
                <td>{{ recipe.Ingredients }}</td>
                <td>{{ recipe.Etapes }}</td>
                <td>{{ recipe.Allergenes }}</td>
                <td>{{ recipe.Regime }}</td>
                <td>
                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_new') }}">Create new</a>
</div>
{% endblock %}
